{
  "name": "hxcpp-debug",
  "displayName": "hxcpp Debug",
  "version": "0.0.2",
  "publisher": "jcward",
  "description": "VS Code debug adapter for Haxe hxcpp runtime.",
  "author": {
    "name": "Jeff Ward"
  },
  "engines": {
    "vscode": "^1.0.0"
  },
  "icon": "images/mock-debug-icon.svg",
  "categories": [
    "Debuggers"
  ],
  "private": true,
  "dependencies": {},
  "repository": {
    "type": "git",
    "url": "https://github.com/jcward/vscode-hxcpp-debug.git"
  },
  "contributes": {
    "debuggers": [
      {
        "type": "hxcpp",
        "label": "hxcpp Debug",

        "enableBreakpointsFor": { "languageIds": [ "haxe" ] },

        "win": {
            "program": "./bin/windows/vschxcppdb.exe"
        },
        "osx": {
            "program": "./bin/mac/vschxcppdb"
        },
        "linux": {
            "program": "./bin/linux/vschxcppdb"
        },

        "configurationAttributes": {
          "launch": {
            "properties": {
              "stopOnEntry": {
                "type": "boolean",
                "description": "Automatically stop after launch.",
                "default": true
              },
              "logLevel": {
                "type": "integer",
                "description": "The debugger log level. Goes from 1 (only errors) to 100 (very verbose). Defaults to 10 (log).",
                "default": 10
              },
              "debugOutput": {
                "type": "string",
                "description": "An optional output directory which contains detailed debugger information. Can be used to investigate debugger-related issues."
              },
              "compile": {
                "type": "object",
                "description": "Set this if you want the debugger to compile the project before running",
                "properties": {
                  "path": {
                    "type": "string",
                    "description": "An optional path which specifies the directory where a compilation will take place."
                  },
                  "command": {
                    "type": "string",
                    "description": "The command used to compile. If omitted, the debugger will not compile the script"
                  }
                },
                "required": ["command"]
              },
              "runPath": {
                "type": "string",
                "description": "Sets the path from where the command will run.",
                "default": "${workspaceRoot}"
              },
              "runCommand": {
                "type": "string",
                "description": "Sets the command used to run the program"
              }
            },
            "required": ["runCommand"]
          }
        },

        "initialConfigurations": [
          {
            "name": "hxcpp-Debug",
            "type": "hxcpp",
            "request": "launch",
            "stopOnEntry": true
          }
        ]
      }
    ]
  }
}
